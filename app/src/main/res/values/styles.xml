<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Dark.Blue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkBlueColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkBlueColorPrimaryDark</item>
        <item name="colorAccent">@color/darkBlueColorAccent</item>
        <item name="colorText0">@color/darkBlueText0</item>
        <item name="colorText1">@color/darkBlueText1</item>
        <item name="colorText2">@color/darkBlueText2</item>
        <item name="colorBackground0">@color/darkBlueBackground0</item>
        <item name="colorBackground1">@color/darkBlueBackground1</item>
        <item name="colorBackground2">@color/darkBlueBackground2</item>
        <item name="colorButtonBackground">@color/darkBlueButtonBackground</item>
        <item name="colorButtonText">@color/darkBlueButtonText</item>
        <item name="colorRipple">@color/darkBlueRipple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Light.Pink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightPinkColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightPinkColorPrimaryDark</item>
        <item name="colorAccent">@color/lightPinkColorAccent</item>
        <item name="colorText0">@color/lightPinkText0</item>
        <item name="colorText1">@color/lightPinkText1</item>
        <item name="colorText2">@color/lightPinkText2</item>
        <item name="colorBackground0">@color/lightPinkBackground0</item>
        <item name="colorBackground1">@color/lightPinkBackground1</item>
        <item name="colorBackground2">@color/lightPinkBackground2</item>
        <item name="colorButtonBackground">@color/lightPinkButtonBackground</item>
        <item name="colorButtonText">@color/lightPinkButtonText</item>
        <item name="colorRipple">@color/lightPinkRipple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="GeneralButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="iconTint">?attr/colorButtonText</item>
        <item name="iconSize">20dp</item>
        <item name="android:fontFamily">@font/font_en_medium</item>
        <item name="backgroundTint">?attr/colorButtonBackground</item>
        <item name="cornerRadius">@dimen/radiusSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">?attr/colorRipple</item>
    </style>

    <style name="GeneralButton.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/font_en_medium</item>
        <item name="backgroundTint">?attr/colorButtonBackground</item>
        <item name="iconTint">?attr/colorButtonText</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">@dimen/radiusSmall</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="rippleColor">?attr/colorRipple</item>
    </style>

    <style name="GeneralButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorText0</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/font_en_medium</item>
        <item name="cornerRadius">@dimen/radiusSmall</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">?attr/colorButtonBackground</item>
    </style>

    <style name="GeneralText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorText0</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/font_en_medium</item>
    </style>

</resources>